{
    "name": "ibernabel/metform-n8n-webhook-bridge",
    "description": "MetForm to n8n webhook bridge",
    "type": "wordpress-plugin",
    "license": "MIT",
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "wp-coding-standards/wpcs": "^3.0",
        "phpunit/phpunit": "^9.0",
        "phpstan/phpstan": "^1.0",
        "phpmd/phpmd": "^2.13"
    },
    "scripts": {
        "test": "phpunit",
        "cs": "phpcs",
        "cbf": "phpcbf",
        "stan": "phpstan analyse"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}